<div class="qlist-wrapper">
  <div class="question-summary clearfix">
    <div class="cp clearfix">
      <div class="votes">
        <div class="mini-counts">
          <span><%= question.votes.count %></span>
        </div>
        <div>票</div>
      </div>
      <div class="answered">
        <div class="mini-counts">
          <span><%= question.answers.count %></span>
        </div>
        <div>回答</div>
      </div>
      <div class="views">
        <div class="mini-counts">
          <span>23</span>
        </div>
        <div>閲覧数</div>
      </div>
    </div>
    <div class="summary clearfix">
      <div class="user_gravatar">
        <%= profile_img(question.user)%>
      </div>
      <h3>
        <a class="question-hyperlink"><%= link_to "#{question.title}", question_path(question.id) %></a>
      </h3>
      <div class="tags">
        <!--  タグエリア -->
        <a href="#" class="post-tag">ruby</a>
      </div>
      <div class="questions-info">
        <!-- 投稿日等 -->
        <%= question.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
      </div>
    </div>
  </div>
</div>
