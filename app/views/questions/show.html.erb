<div class="content">
  <p id="notice"><%= notice %></p>
  <div class="question-header">
    <div><%= link_to "質問する", new_question_path,  class: "btn btn-primary question-btn" %></div>
    <!-- <h1>質問タイトル</h1> questionコントローラーから取得 -->
    <h1><%= @question.title %></h1>
  </div>
  <div class="mainbar">
    <div class="question-area">
      <div class="clearfix">
        <div class="votecell">
          <div class="btn btn-default">投票する</div> <!-- 投票機能実装後変更 -->
          <span class="vote-count-post">0</span>
        </div>
        <div class="edit-delete-btn">
          <% if user_signed_in? and current_user.id == @question.user_id %>            <%= link_to '編集', edit_question_path(@question), class: 'btn btn-default btn-sm' %>            <%= link_to '削除', @question, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-default btn-sm btn btn-danger' %>          <% end %>          <%= link_to '戻る', questions_path, class: 'btn btn-default btn-sm btn-secondary' %>        </div>      </div>
      <div class="post-text">
        <h1><%= simple_format(@question.content) %></h1>
      </div>
      <div class="clearfix">
        <div class="post-taglist">
          タグを表示予定
        </div>
        <div class="user-info">
          <table>
            <tr>
              <div class="user_gravatar">
                <%= profile_img(@question.user) %>
              </div>
              <td>ユーザー名</td>
              <td>taro</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="sidebar">
    <table class="question-info">
      <tr>
        <td>
          <p class="label-key">投稿日</p>
        </td>
        <td style="padding-left: 10px;">
          <p class="label-key">2017/12/30</p>
        </td>
      </tr>
      <tr>
        <td>
          <p class="label-key">閲覧回数</p>
        </td>
        <td style="padding-left: 10px;">
          <p class="label-key">10回</p>
        </td>
      </tr>
      <tr>
        <td>
          <p class="label-key">アクティブ</p>
        </td>
        <td style="padding-left: 10px;">
          <p class="label-key">2018/1/2</p>  <!--余裕があれば表示-->
        </td>
      </tr>
    </table>
  </div>
</div>
