<div class="container">
  <div class="content clearfix">
    <div class="mainbar">
      <div class="subheader">

      </div>
      <% @questions.each do |question| %>
        <div class="qlist-wrapper">
          <div class="question-summary clearfix">
            <div class="cp clearfix">
              <div class="votes">
                <div class="mini-counts">
                  <span>1</span>
                </div>
                <div>票</div>
              </div>
              <div class="answered">
                <div class="mini-counts">
                  <span>11</span>
                </div>
                <div>回答</div>
              </div>
              <div class="views">
                <div class="mini-counts">
                  <span>23</span>
                </div>
                <div>閲覧数</div>
              </div>
            </div>
            <div class="summary clearfix">
              <h3><%= link_to "#{question.content} "%></h3>
              <div class="tags">
                <!--  タグエリア -->
                ruby
              </div>
              <div class="questions-info">
                <!-- 投稿日等 -->
                <%= "#{question.created_at}" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="sidebar">
      サイドバー
    </div>
  </div>
</div>
