<div class="container">
  <div class="content clearfix">
    <div class="mainbar">
      <div class="subheader">
        <h1>質問一覧</h1>
      </div>
      <% @questions.each do |question| %>
        <div class="qlist-wrapper">
          <div class="question-summary clearfix">
            <div class="cp clearfix">
              <div class="votes">
                <div class="mini-counts">
                  <span>1</span>
                </div>
                <div>票</div>
              </div>
              <div class="answered">
                <div class="mini-counts">
                  <span>11</span>
                </div>
                <div>回答</div>
              </div>
              <div class="views">
                <div class="mini-counts">
                  <span>23</span>
                </div>
                <div>閲覧数</div>
              </div>
            </div>
            <div class="summary clearfix">
              <h3>
                <a href="#" class="question-hyperlink"><%= "#{question.content} "%></a>
              </h3>
              <div class="tags">
                <!--  タグエリア -->
                <a href="#" class="post-tag">ruby</a>
              </div>
              <div class="questions-info">
                <!-- 投稿日等 -->
                <%= question.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="sidebar">
      <div class="aside-cta">
        <a href="/questions/new" class="btn btn-primary">質問する</a>
      </div>
      <div class="statistics">
        <h4>サイト統計情報</h4>
        <table>
          <tr>
            <td><%= @questions.count %></td>
            <td>質問</td>
          </tr>
          <tr>
            <td>0 <!-- answerインスタンスから取得 --> </td>
            <td>回答</td>
          </tr>
          <tr>
            <td>0% <!-- answerインスタンスから取得 --></td>
            <td>回答済</td>
          </tr>
          <tr>
            <td>1人 <!-- userインスタンスから取得 --></td>
            <td>ユーザー</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
